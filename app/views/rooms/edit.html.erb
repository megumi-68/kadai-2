<%= form_with model: @room, local: true do |f| %>
  <% if @room.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@room.errors.count, "error") %> prohibited this room from being saved:</h2>
      <ul>
        <% @room.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :name, '施設名' %>
    <%= f.text_field :name %>
  </div>

  <div>
    <%= f.label :detail, '詳細' %>
    <%= f.text_area :detail %>
  </div>

  <div>
    <%= f.label :price, '価格 (/日)' %>
    <%= f.number_field :price %>
  </div>

  <div>
    <%= f.label :address, '住所' %>
    <%= f.text_field :address %>
  </div>

  <div>
    <%= f.label :icon, '画像' %>
    <%= f.file_field :icon %>
  </div>

  <div>
    <%= f.submit '更新する' %>
  </div>
<% end %>
