<div class="container my-5">
  <h1 class="mb-4">プロフィールの編集</h1>

<%= form_for(@user, url: user_path(@user)) do |f| %>
  <div class="mb-3">
    <%= f.label :name, '名前', class: "form-label" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :icon, 'プロフィール画像', class: "form-label" %>
    <%= f.file_field :icon, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :introduce, '自己紹介', class: "form-label" %>
    <%= f.text_area :introduce, class: "form-control" %>
  </div>
  
  <div class="d-flex gap-2">
    <%= f.submit '更新', class: "btn btn-primary" %>
    <%= link_to 'キャンセル', user_path(@user), class: "btn btn-secondary" %>
  </div>
<% end %>
</div>
