<div class="container my-5">
  <h1 class="mb-4">アカウント情報</h1>

  <div class="mb-4">
    <p><strong>メールアドレス:</strong> <%= @user.email %></p>
    <p><strong>パスワード:</strong> *********</p>
  </div>

  <div class="mb-4">
    <%= link_to 'アカウント情報を編集', edit_account_user_path(@user), class: "btn btn-outline-primary" %>
  </div>

  <hr class="my-4">

  <h1 class="mb-4">プロフィール</h1>

  <div class="mb-3">
    <p><strong>名前:</strong> <%= @user.name %></p>
  </div>

  <div class="mb-4">
    <p><strong>プロフィール画像:</strong></p>
    <%= image_tag @user.icon_or_default, class: "img-thumbnail", style: "width: 150px; height: 150px;" %>
  </div>

  <div class="mb-4">
    <p><strong>自己紹介:</strong></p>
    <p><%= @user.introduce.present? ? @user.introduce : '自己紹介はまだありません。' %></p>
  </div>

  <div>
    <%= link_to 'プロフィールを編集', edit_profile_user_path(@user), class: "btn btn-outline-primary" %>
  </div>
</div>
